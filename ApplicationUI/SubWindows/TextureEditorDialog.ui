   <string notr="true">/* ============================================================
   TextureEditorDialog stylesheet (MaterialEditor-like)
   ============================================================ */

QDialog {
    background-color: #1b1d20;
}

QLabel {
    background-color: #303645;
    color: rgb(92,102,113);
    font-weight: 550;
    padding: 5px 8px;
    border-radius: 0px;
}

/* Buttons */
QPushButton {
    background-color: rgb(35,35,37);
    border: none;
    color: rgb(127,137,148);
    padding: 1px 0px;
    text-align: center;
    font-size: 9pt;
    line-height: 23px;
    margin: 0;
}
QPushButton:pressed { background-color: rgb(68,93,132); }
QPushButton:hover  { background-color: rgb(35,35,36); }

/* Inputs (25px rows) */
QLineEdit {
    background-color: #282b2e;
    border: none;
    padding-left: 6px;
    color: rgb(200,205,210);
    min-height: 25px;
    max-height: 25px;
    margin: 0px;
}
QComboBox {
    background-color: #282b2e;
    border: none;
    border-radius: 0px;
    padding-left: 6px;
    color: rgb(200,205,210);
    min-height: 25px;
    max-height: 25px;
    margin: 0px;
}
QComboBox::drop-down { border: none; }
QComboBox QAbstractItemView {
    background-color: #282b2e;
    color: white;
    border: none;
}

/* Splitter (hide handle like MaterialEditor) */
QSplitter {
    background: transparent;
    border: 0px;
    margin: 0px;
    padding: 0px;
}
QSplitter::handle { background: transparent; border: 0px; margin: 0px; padding: 0px; }
QSplitter::handle:horizontal { width: 0px; }
QSplitter::handle:vertical   { height: 0px; }

/* List */
QListWidget {
    border: 0px;
    outline: none;
    background: transparent;
}
QListWidget::item {
    border-radius: 0px;
    margin-left: 1px;
    margin-right: 1px;
    padding: 0px 8px;
}
QListWidget::item:selected {
    background: rgba(60,120,215,180);
    color: white;
}
QListWidget::item:selected:!active {
    background: rgba(60,120,215,160);
    color: white;
}
QListWidget::item:hover {
    background: rgba(60,120,215,90);
}

/* Preview */
#previewWidgetPlaceholder {
    background-color: #1f232a;
    border: 1px solid #2a2f3a;
    color: rgb(160,170,180);
}

/* Property grid background + row label clamp */
QFrame#propsFrame {
    background-color: #22262c;
}
QFrame#propsFrame QLabel {
    background-color: #303645;
    color: rgb(92,102,113);
    font-weight: 550;
    padding-left: 8px;
    padding-right: 8px;
    padding-top: 0px;
    padding-bottom: 0px;
    min-height: 25px;
    max-height: 25px;
    margin: 0px;
    border: 0px;
}
QFrame#propsFrame QLineEdit,
QFrame#propsFrame QComboBox {
    min-height: 25px;
    max-height: 25px;
    margin: 0px;
    border: 0px;
}

/* Bottom filler bar */
QFrame#propsFillFrame {
    background-color: #2b2f36;
    border-top: 1px solid #23262c;
    border-bottom: 1px solid #23262c;
}
</string>
